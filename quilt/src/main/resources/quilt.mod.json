{
  "schema_version": 1,
  "minecraft": {
    "environment": "dedicated_server"
  },
  "quilt_loader": {
    "group": "${group}",
    "id": "dcintegration-quilt",
    "version": "${version}",
    "metadata": {
      "name": "Discord Integration",
      "description": "This mod links your server chat with a channel on your discord server.",
      "contributors": {
        "ErdbeerbaerLP": "Author"
      }
    },
    "intermediate_mappings": "net.fabricmc:intermediary",
    "entrypoints": {
      "init": [
        "de.erdbeerbaerlp.dcintegration.architectury.quilt.DiscordIntegrationQuilt"
      ]
    },
    "depends": [
      {
        "id": "quilt_loader",
        "version": "*"
      },
      {
        "id": "quilt_base",
        "version": "*"
      },
      {
        "id": "minecraft",
        "version": ">=1.21"
      }
    ]
  },
  "mixin": [
    "fabric-like.dcintegration.mixins.json",
    "dcintegration.mixins.json"
  ]
}
